<main>
  <div class="content-wrapper">
    <h1><%= @idea.title %></h1>
      <%= form_tag(idea_path(@idea), method: 'PATCH', class: 'form--inpage') do %>
      <div class="input-group input-group--horizontal">
        <label class="input-group__label" for="title">Title</label>
      <%= text_field_tag('title', @idea.title, class: 'input-group__field', placeholder: 'E.g. Ride a camel') %>
      <label class="input-group__label" for="title">Done Count</label>
      <%= text_field_tag('done_count', @idea.done_count, class: 'input-group__field') %>
      </div>
      <div class="prompt">
      <%= link_to('Cancel', account_ideas_path, class: 'prompt__cancel') %>
      <%= button_tag('Create idea', class: 'btn btn--primary prompt__confirm') %>
      </div>
      <% end %>
  </div>
</main>
